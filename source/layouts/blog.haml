= wrap_layout :base do
    %link{:href=>"/stylesheets/blog.css", :rel=>'stylesheet'}
    %nav
        %h1.text-center.light
            %a#brandHeading.glowOnHover{:href=>"/"}
                Antumbra
            %a#subTitle.glowOnHover{:href=>"/blog"}
                Development Blog
    .blogBody
        %h3#postHeading.light.text-center
            = current_page.data.title
            %br/
        %p#postDate.light
            = current_page.data.date
        #container
            =yield
        #author
            #pictureContainer
                %img#authorPic{:src=>"//s3.amazonaws.com/antumbra-io/#{current_page.data.author.pic}.jpg",
                    :alt=>"#{current_page.data.author.name}"}
            #authorInfo
                %h4#authorName
                    =current_page.data.author.name
                %h6#authorTitle
                    =current_page.data.author.title
        = disqus
        = disqus_count
